<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SemaforoActivity">

    <View
        android:id="@+id/view"
        android:layout_width="208dp"
        android:layout_height="533dp"
        android:background="@color/simpleBlack"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ExtraText">

    </View>

    <Button
        android:id="@+id/lightRed"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/ic_semaforo_light"
        android:text="@string/lightRed"
        app:backgroundTint="@color/lightOffRed"
        app:layout_constraintBottom_toTopOf="@+id/lightOrange"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toTopOf="@+id/view" />

    <Button
        android:id="@+id/lightOrange"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:text="@string/lightOrange"
        android:background="@drawable/ic_semaforo_light"
        app:backgroundTint="@color/lightOffOrange"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toTopOf="@+id/view" />

    <Button
        android:id="@+id/lightGreen"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/ic_semaforo_light"
        android:text="@string/lightGreen"
        app:backgroundTint="@color/lightOffGreen"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toBottomOf="@+id/lightOrange" />

    <Button
        android:id="@+id/prevVal"
        android:layout_width="50dp"
        android:layout_height="100dp"
        android:background="@drawable/ic_baseline_chevron_left"
        android:text="@string/prevVal"
        app:backgroundTint="@color/simpleBlack"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/view"
        app:layout_constraintHorizontal_bias="0.307"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499" />

    <Button
        android:id="@+id/nextVal"
        android:layout_width="50dp"
        android:layout_height="100dp"
        android:background="@drawable/ic_baseline_chevron_right"
        android:text="@string/nextVal"
        app:backgroundTint="@color/simpleBlack"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.686"
        app:layout_constraintStart_toEndOf="@+id/view"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499" />
</androidx.constraintlayout.widget.ConstraintLayout>